{
  "name": "sfdx-ui-light",
  "version": "1.0.0",
  "main": "src/electron/main.js",
  "scripts": {
    "start":"run-p --race start:electron start:client",
    "start:electron": "electron .",
    "start:client": "serve site",
    "build:client":"lwr build",
    "dev": "run-p --race dev:client start-electron",
    "dev:client": "run-p --race dev:client:copy dev:client:start",
    "dev:client:start": "lwr dev"
  },
  "devDependencies": {
    "@lwc/synthetic-shadow": "5.0.0",
    "@salesforce-ux/design-system": "2.22.2",
    "copy-files-from-to": "3.9.0",
    "cpx": "^1.5.0",
    "electron": "^25.3.0",
    "electron-reload": "2.0.0-alpha.1",
    "glob": "10.3.10",
    "lightning-base-components": "1.19.11-alpha",
    "lwc": "5.0.0",
    "lwr": "0.11.3",
    "npm-run-all": "^4.1.5"
  },
  "copyFiles": [
    {
      "from": "node_modules/@salesforce-ux/design-system/assets",
      "to": "src/client/assets"
    }
  ],
  "dependencies": {
    "@lwrjs/label-module-provider": "^0.11.3",
    "serve": "^14.2.1"
  }
