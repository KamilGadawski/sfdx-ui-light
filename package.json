{
  "name": "sfdx-ui-light",
  "version": "1.0.0",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron-forge start",
    "start:electron:dev": "NODE_ENV=development electron .",
    "start:electron:stage": "NODE_ENV=staging electron .",
    "start:electron:prod": "NODE_ENV=production electron .",
    "start:client": "serve site",
    "start:heroku":"NODE_ENV=production node src/client/server.js",
    "build:client": "lwr build --clean",
    "dev": "run-p --race dev:client start:electron:dev",
    "dev:client": "NODE_ENV=development run-p --race dev:client:copy dev:client:start",
    "dev:client:start": "NODE_ENV=development node src/client/server.js",
    "package": "electron-forge package",
    "make": "electron-forge make --platform darwin"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@lwc/synthetic-shadow": "5.0.0",
    "@salesforce-ux/design-system": "2.22.2",
    "copy-files-from-to": "3.9.0",
    "cpx": "^1.5.0",
    "electron": "^25.3.0",
    "electron-reload": "2.0.0-alpha.1",
    "glob": "10.3.10",
    "lightning-base-components": "1.19.11-alpha",
    "lwc": "5.0.0",
    "lwr": "0.11.3",
    "npm-run-all": "^4.1.5"
  },
  "copyFiles": [
    {
      "from": "node_modules/@salesforce-ux/design-system/assets",
      "to": "src/client/assets"
    }
  ],
  "dependencies": {
    "@lwc/synthetic-shadow": "5.0.0",
    "@lwrjs/label-module-provider": "^0.11.3",
    "@salesforce-ux/design-system": "2.22.2",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "electron": "^25.3.0",
    "electron-reload": "2.0.0-alpha.1",
    "electron-serve": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "jsforce": "1.11.1",
    "jsforce-ajax-proxy": "^2.0.0",
    "lightning-base-components": "1.19.11-alpha",
    "lwc": "5.0.0",
    "lwr": "0.11.3",
    "serve": "^14.2.1",
    "sfdx-node": "^3.8.0",
    "tabulator-tables": "^5.5.2",
    "update-electron-app": "^3.0.0"
  }
}
