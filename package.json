{
    "name": "sfdx-ui-light",
    "version": "1.0.0",
    "scripts": {
        "start:stage:electron": "NODE_ENV=staging electron src/electron",
        "start:prod:electron": "NODE_ENV=production electron src/electron",
        "start:dev:client": "NODE_ENV=development node -r dotenv/config src/client/server-dev.js",
        "start:dev:electron": "NODE_ENV=development electron src/electron",
        "clean": "rm -r __lwr_cache__ site __skip_directory_creation__",
        "fix:lightning": "node scripts/fix_lightning.js",
        "build:extension": "rm -r chrome_ext; rollup -c rollup.config.js --bundleConfigAsCjs",
        "start:heroku": "NODE_ENV=production REDIRECT_URI=https://sf-toolkit.com/oauth2/callback node -r dotenv/config src/client/server-prod.js",
        "heroku-postbuild": "npm run clean; NODE_ENV=production WARMUP=true lwr build -m prod --clean"
    },
    "copyFiles": [
        {
            "from": "node_modules/@salesforce-ux/design-system/assets",
            "to": "src/client/assets"
        }
    ],
    "dependencies": {
        "@lwc/rollup-plugin": "^5.2.1",
        "@lwrjs/label-module-provider": "0.11.6",
        "@rollup/plugin-replace": "^5.0.5",
        "command-exists": "^1.2.9",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-requests-logger": "^4.0.0",
        "highlight.js": "^11.9.0",
        "http-errors": "^2.0.0",
        "jsforce": "1.11.1",
        "jsforce-ajax-proxy": "^2.0.0",
        "lwr": "0.11.6",
        "mongodb": "^6.3.0",
        "node-fetch": "^2.7.0",
        "npm-run-all": "^4.1.5",
        "qs": "^6.11.2",
        "rollup-plugin-copy": "^3.5.0",
        "serve": "^14.2.1",
        "serve-handler": "^6.1.5",
        "serve-static": "^1.15.0",
        "sfdx-node": "^3.8.0",
        "tabulator-tables": "^5.5.2"
    },
    "devDependencies": {
        "@lwc/synthetic-shadow": "5.1.0",
        "@salesforce-ux/design-system": "2.22.2",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "copy-files-from-to": "3.9.0",
        "cpx": "^1.5.0",
        "jspdf": "2.5.1",
        "jspdf-autotable": "3.7.1",
        "lightning-base-components": "1.19.11-alpha",
        "lwc": "5.1.0"
    }
}
