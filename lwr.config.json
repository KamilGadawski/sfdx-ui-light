{
    "layoutsDir": "$rootDir/src/client/layouts",   
    "contentDir": "$rootDir/src/client/content",
    "lwc": {
        "modules": [
            { "dir": "$rootDir/src/client/modules" },
            { "dir": "$rootDir/src/client/components" },
            { "dir": "$rootDir/src/client/web_extension/components" },
            { "dir": "$rootDir/src/client/applications/explorers" },
            { "dir": "$rootDir/src/client/applications/documentation" },
            { "dir": "$rootDir/src/client/applications/tools" },
            { "npm": "lightning-base-components" }
        ]
    },
    "bundleConfig": { 
        "exclude": [
            "lwr/navigation",
            "shared/store",
            "@lwc/synthetic-shadow",
            "lwc",
            "lightning/modal"
        ] 
    },
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/node_modules/@salesforce-ux/design-system/assets",
            "urlPath": "/assets"
        },
        {
            "alias":"imagesDir",
            "dir": "$rootDir/src/client/assets/images",
            "urlPath": "/images"
        },
        {
            "alias":"stylesDir",
            "dir": "$rootDir/src/client/assets/styles",
            "urlPath": "/styles"
        },
        {
            "alias":"libsDir",
            "dir": "$rootDir/src/client/assets/libs",
            "urlPath": "/libs"
        },
        {
            "file": "$rootDir/src/client/assets/favicon.ico",
            "urlPath": "/favicon.ico"
        }
    ],
    "hooks": ["$rootDir/src/client/hooks/application-hook.mjs"],
    "routes": [
        {
            "id": "home",
            "path": "/",
            "contentTemplate": "$contentDir/home.html",
            "layoutTemplate": "$layoutsDir/home.html",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "app",
            "path": "/app",
            "rootComponent": "ui/fullView",
            "layoutTemplate": "$layoutsDir/main.html",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "extension",
            "path": "/extension",
            "rootComponent": "ui/directView",
            "layoutTemplate": "$layoutsDir/main.html",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "callback",
            "path": "/callback",
            "rootComponent": "connection/callback",
            "layoutTemplate": "$layoutsDir/main.html"
        },
        {
            "id": "CTA",
            "path": "/cta",
            "rootComponent": "cta/app",
            "layoutTemplate": "$layoutsDir/cta.html",
            "cache": { "ttl": 1 },
            "bootstrap": {
                "syntheticShadow": true
            }
        }
    ],
    "moduleProviders": [
        "@lwrjs/router/module-provider",
        "@lwrjs/label-module-provider",
        "@lwrjs/app-service/moduleProvider",
        "@lwrjs/lwc-module-provider",
        "@lwrjs/npm-module-provider"
    ],
    "staticSiteGenerator": {
        "_additionalModules": [
            "@lwc/synthetic-shadow",
            "lwc"
        ]
    }
}