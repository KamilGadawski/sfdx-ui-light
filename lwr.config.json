{
    "layoutsDir": "$rootDir/src/client/layouts",   
    "lwc": {
        "modules": [
            { "dir": "$rootDir/src/client/modules" },
            { "npm": "lightning-base-components" }
        ]
    },
    "bundleConfig": { 
        "exclude": [
            "@lwc/synthetic-shadow",
            "lwc",
            "lightning/modal"
        ] 
    },
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/node_modules/@salesforce-ux/design-system/assets",
            "urlPath": "/assets"
        },
        {
            "alias":"stylesDir",
            "dir": "$rootDir/src/client/assets/styles",
            "urlPath": "/styles"
        },
        {
            "alias":"libsDir",
            "dir": "$rootDir/src/client/assets/libs",
            "urlPath": "/libs"
        },
        {
            "file": "$rootDir/src/client/assets/favicon.ico",
            "urlPath": "/favicon.ico"
        }
    ],
    "routes": [
        {
            "id": "home",
            "path": "/",
            "rootComponent": "ui/app",
            "layoutTemplate": "$layoutsDir/main.html",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "callback",
            "path": "/callback",
            "rootComponent": "connection/callback",
            "layoutTemplate": "$layoutsDir/main.html",
            "bootstrap": {
                "syntheticShadow": true
            }
        }
    ],
    "moduleProviders": [
        "$rootDir/src/client/lwrModules/process-env-module-provider/processEnvModuleProvider.cjs",
        "@lwrjs/label-module-provider",
        "@lwrjs/app-service/moduleProvider",
        "@lwrjs/lwc-module-provider",
        "@lwrjs/npm-module-provider"
    ],
    "staticSiteGenerator": {
        "_additionalModules": [
            "@lwc/synthetic-shadow",
            "lwc"
        ]
    }
}