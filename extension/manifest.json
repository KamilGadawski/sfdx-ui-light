{
  "manifest_version": 3,
  "name": "SF Toolkit Extension",
  "version": "1.0.0",
  "description": "Use SF Toolkit directly from chrome to analyze User access, profile, permissions, etc",
  "icons": {
      "128": "images/icon-128.png"
  },
  "action": {},
  "content_security_policy": {
      "object-src": "self",
      "script-src": "self"
  },
  "web_accessible_resources": [
      {
          "matches": [
              "https://*.salesforce.com/*",
              "https://*.force.com/*",
              "https://*.cloudforce.com/*"
          ],
          "resources": [
              "http://localhost:3000/"
          ]
      }
  ],
  "host_permissions": [
      "https://*.salesforce.com/*",
      "https://*.force.com/*",
      "https://*.cloudforce.com/*"
  ],
  "background": {
      "service_worker": "scripts/background.js",
      "type": "module"
  },
  "permissions": [
      "cookies",
      "declarativeContent"
  ]
}