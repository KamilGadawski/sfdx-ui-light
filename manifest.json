{
    "manifest_version": 3,
    "name": "Salesforce Toolkit",
    "version": "__buildVersion__",
    "description": "Use SF Toolkit directly from chrome to visualize record details and analyze User access, profile, permissions, etc",
    "icons": {
        "128": "__buildLogo__"
    },
    "action": {
        "default_title": "Click to open Salesforce Toolkit"
    },
    "content_scripts": [
        {
          "matches": [
            "https://*.sf-toolkit.com/*",
            "http://localhost:3000/*"
        ],
          "run_at":"document_end",
          "js": ["scripts/inject.js"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "resources": [
                "index.html*",
                "callback.html*"
            ]
        }
    ],
    "host_permissions": [
        "https://*/*",
        "*://*/*"
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "permissions": [
        "identity",
        "cookies",
        "storage",
        "tabs",
        "tabGroups",
        "sidePanel",
        "contextMenus"
    ],
    "incognito": "split"
  }